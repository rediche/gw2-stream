{
  "version": 2,
  "name": "gw2-stream",
  "builds": [
    { "src": "src/**/*.js", "use": "@now/node" }
  ],
  "routes": [
    { 
      "src": "/",
      "status": 301,
      "headers": { 
        "Location": "https://gw2.ninja/stream"
      }
    },
    { 
      "src": "/command/(.*)-(.*)/(.*)",
      "dest": "/src/api/$1/$2.js?token=$3",
      "headers": { "Content-Type": "text/plain" }
    },
    {
      "src": "/(.*)",
      "dest": "/src/api/$1.js",
      "headers": { "Content-Type": "text/plain" }
    }
  ]
}
